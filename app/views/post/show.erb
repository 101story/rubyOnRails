<form action="/post/update/<%= @post.id %>">
<%= @post.id %> 번째 글  <button type="button" class="btn btn-primary btn-sm" onClick="window.location.href='/'">글목록</button> <br>
제목 : <input type="text" name="title" value="<%= @post.title %>"> <br>
내용 : <input type="text" name="content" value="<%= @post.content %>"><br>
작성일 : <%= @post.created_at.strftime('%D') %> <br>  
수정일 : <%= @post.updated_at.strftime('%D') %> <br>  
<button type="submit" class="btn btn-primary btn-sm" >수정</button>
<button type="button" class="btn btn-primary btn-sm" onClick="window.location.href='/post/destroy/<%=@post.id%>'">삭제</button>
</form>
